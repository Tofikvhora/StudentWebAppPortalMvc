@model StudentWebAppPortal.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4 text-center text-danger">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h4>Are you sure you want to delete this student?</h4>
            </div>
            <div class="card-body">
                <h5 class="text-center mb-4">Student Details</h5>
                <dl class="row">
                    <dt class="col-sm-4">Student ID</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.id)</dd>

                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.studentName)</dd>

                    <dt class="col-sm-4">Gender</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.studentGender)</dd>

                    <dt class="col-sm-4">Age</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.studentAge)</dd>

                    <dt class="col-sm-4">Class/Standard</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.standard)</dd>

                    <dt class="col-sm-4">Father's Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.fatherName)</dd>
                </dl>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <form asp-action="Delete" method="post">
                    <input type="submit" value="Confirm Delete" class="btn btn-danger px-4" />
                </form>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </div>
    </div>
</div>
